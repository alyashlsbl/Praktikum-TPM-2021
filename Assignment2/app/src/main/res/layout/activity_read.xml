<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/pict2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="70dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Nama   : "
            />

        <TextView
            android:id="@+id/tv_name2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/tv_name"
            android:textSize="20sp"
            android:text="Your Name"
            />

        <TextView
            android:id="@+id/tv_nim"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/tv_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="NIM      : "
            />

        <TextView
            android:id="@+id/tv_nim2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/tv_nim"
            android:textSize="20sp"
            android:text="Your NIM"
            />

        <TextView
            android:id="@+id/tv_ipk"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@id/tv_nim"
            android:textSize="20sp"
            android:textStyle="bold"
            android:hint="Nilai      : "
            />

        <TextView
            android:id="@+id/tv_ipk2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_nim"
            android:layout_toRightOf="@id/tv_ipk"
            android:textSize="20sp"
            android:text="Your Mark"
            />

    </RelativeLayout>

</LinearLayout>
