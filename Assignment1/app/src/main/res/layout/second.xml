<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC">

    <ImageView
        android:id="@+id/book1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/book_1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/book1"
        android:textColor="#CD5C5C"
        android:text="We Were Liars - E. Lockhart"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/book1"
        android:layout_below="@id/text1"
        android:textColor="#CD5C5C"
        android:text="Be kind. A little more than you need to do."  />

    <TextView
        android:id="@+id/text2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_below="@id/book1"
        android:textColor="#CD5C5C"
        android:text="Destination Anywhere - Sara Barnard"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/text22"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text2"
        android:textColor="#CD5C5C"
        android:text="Everyone who travels is running, in some ways."  />

    <ImageView
        android:id="@+id/book2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/book1"
        android:layout_toRightOf="@id/text2"
        android:src="@drawable/book_2" />

    <ImageView
        android:id="@+id/book3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/book2"
        android:src="@drawable/book_3" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/book2"
        android:layout_toRightOf="@id/book3"
        android:layout_marginTop="60dp"
        android:textColor="#CD5C5C"
        android:text="The Sullian Sisters - Kathryn Ormsbee"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/text33"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_toRightOf="@id/book3"
        android:layout_marginTop="10dp"
        android:textColor="#CD5C5C"
        android:text="Doing the same thing over and over, expecting different resultsâ€”that was the definition of insanity, right?"/>

</RelativeLayout>